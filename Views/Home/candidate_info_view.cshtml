        <style>
.profile-card {
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: 0 2px 4px rgba(0,0,0,.1);
  display: flex;
  flex-direction: column;
  max-width: 400px;
  overflow: hidden;
  padding: 20px;
}

.profile-card__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}

.profile-card__header h3 {
  margin: 0;
  font-size: 24px;
}

.profile-card__header img {
  height: 60px;
  width: 60px;
  border-radius: 50%;
  object-fit: cover;
  margin-left: 20px;
}

.profile-card__table {
  width: 100%;
  font-size: 16px;
}

.profile-card__table th {
  text-align: left;
  padding: 10px;
}

.profile-card__table td {
  padding: 10px;
}

.profile-card__table tr:nth-child(even) {
  background-color: #f9f9f9;
}

.profile-card__description {
  margin-top: 20px;
  font-size: 16px;
  line-height: 1.5;
}
</style>

<div class="profile-card">
  <div class="profile-card__header">
    <h3>@Model.CandidateName</h3>
    <img src="~/Uploads/@Model.Image" alt="Candidate Image">
  </div>
  <table class="profile-card__table">
    <tr>
      <th>DOB:</th>
      <td>@Model.Dob</td>
    </tr>
    <tr>
      <th>Address:</th>
      <td>@Model.Address</td>
    </tr>
    <tr>
      <th>Mobile:</th>
      <td>@Model.Mobile</td>
    </tr>
    <tr>
      <th>Email:</th>
      <td>@Model.Email</td>
    </tr>
    <tr>
      <th>Technology:</th>
      <td>@Model.Technology</td>
    </tr>
    <tr>
      <th>Resume:</th>
      <td><a href="~/Upload_Resume/@Model.Resume">Download Resume</a></td>
    </tr>
  </table>
  <div class="profile-card__description">
    @Model.Description
  </div>
</div>




